<?xml version="1.0"?>

<robot name="R.I.V.A">

  <!-- Chassis link (square base) -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.1"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.3 0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- Wheel links -->
  <link name="wheel_link_front_left">
    <visual>
      <geometry>
        <cylinder length="0.06" radius="0.06"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.06" radius="0.06"/>
      </geometry>
    </collision>
  </link>

  <link name="wheel_link_front_right">
    <visual>
      <geometry>
        <cylinder length="0.06" radius="0.06"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.06" radius="0.06"/>
      </geometry>
    </collision>
  </link>

  <link name="wheel_link_rear_left">
    <visual>
      <geometry>
        <cylinder length="0.06" radius="0.06"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.06" radius="0.06"/>
      </geometry>
    </collision>
  </link>

  <link name="wheel_link_rear_right">
    <visual>
      <geometry>
        <cylinder length="0.06" radius="0.06"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.06" radius="0.06"/>
      </geometry>
    </collision>
  </link>

  <!-- Joints -->
  <joint name="joint_front_left" type="revolute">
    <parent link="chassis"/>
    <child link="wheel_link_front_left"/>
    <origin xyz="-0.15 0.15 -0.05" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-1.745329" upper="1.745329" velocity="0.5"/>
  </joint>

  <joint name="joint_front_right" type="revolute">
    <parent link="chassis"/>
    <child link="wheel_link_front_right"/>
    <origin xyz="0.15 0.15 -0.05" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-1.745329" upper="1.745329" velocity="0.5"/>
  </joint>

  <joint name="joint_rear_left" type="revolute">
    <parent link="chassis"/>
    <child link="wheel_link_rear_left"/>
    <origin xyz="-0.15 -0.15 -0.05" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-1.745329" upper="1.745329" velocity="0.5"/>
  </joint>

  <joint name="joint_rear_right" type="revolute">
    <parent link="chassis"/>
    <child link="wheel_link_rear_right"/>
    <origin xyz="0.15 -0.15 -0.05" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-1.745329" upper="1.745329" velocity="0.5"/>
  </joint>

  
</robot>
